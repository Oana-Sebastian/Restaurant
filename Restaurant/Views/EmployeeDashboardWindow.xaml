<Window x:Class="Restaurant.Views.EmployeeDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Restaurant.Views"
        Title="Employee Dashboard" Height="800" Width="1200" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- You can re-use your EmployeeDashboardControl here -->
        <views:EmployeeDashboardControl />
        <Button Content="Logout"
        Command="{Binding LogoutCommand}"
        HorizontalAlignment="Right" Margin="0,2,10,0"
                VerticalAlignment="Top"/>
    </Grid>
</Window>
